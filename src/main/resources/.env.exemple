# Porta do servidor
SERVER_PORT=8080

# Datasource MySQL
DB_URL=jdbc:mysql://localhost:3306/blogdb?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_USER=bloguser
DB_PASS=blogpass

# JPA / Hibernate
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_DIALECT=org.hibernate.dialect.MySQLDialect

# JWT
JWT_SECRET=COLOQUE_SEU_SEGREDO_AQUI
JWT_EXPIRES_IN=604800

# Upload de arquivos
UPLOAD_DIR=uploads
BASE_URL=http://localhost:8080

# Configuração de e-mail (Gmail)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=SEU_EMAIL
MAIL_PASS=SUA_SENHA_DE_APP

MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# Google OAuth2
GOOGLE_CLIENT_ID=SEU_CLIENT_ID
GOOGLE_CLIENT_SECRET=SEU_CLIENT_SECRET
GOOGLE_SCOPE=openid,profile,email
GOOGLE_CLIENT_NAME=Google
